# TODO: Review this, move function to ~/.functions

parse_git_branch() {
Branch=$(git branch 2>/dev/null | grep '^*' | colrm 1 2)
FD=$(echo $Branch | grep -Eio "FD-[0-9]+")
if [ "$FD" = "" ]; then
        if [ "$Branch" = "" ]; then
                echo ""
        else
                echo \($Branch\)
        fi
else
        echo \($FD\)
fi
}

export PS1="\[\033[36m\]\u\[\033[m\]@\[\033[32m\] \[\033[33;1m\]\w\[\033[m\] \$(parse_git_branch) \$ "
